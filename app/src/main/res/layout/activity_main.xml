<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    tools:context="com.example.fadi.assim1.MainActivity">
    <GridLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="100dp"
        android:layout_marginLeft="20dp"
        android:rowCount="3"
        android:columnCount="3"
        android:id="@+id/gridLayout"
        >

        <Button
            style="?android:attr/buttonStyleSmall"
            android:layout_width="90dp"
            android:layout_height="90dp"
            android:id="@+id/A1"
            android:layout_marginTop="10dp"
            android:layout_marginLeft="10dp"

            android:layout_alignParentBottom="true"
            android:layout_alignParentRight="true"
            android:layout_alignParentEnd="true"
            android:background="#33e5b1" />

        <Button
            style="?android:attr/buttonStyleSmall"
            android:layout_width="90dp"
            android:layout_height="90dp"
            android:id="@+id/A2"
            android:layout_marginTop="10dp"
            android:layout_marginLeft="10dp"
            android:layout_alignTop="@+id/A1"
            android:layout_toLeftOf="@+id/A1"
            android:layout_toStartOf="@+id/A1"
            android:background="#33e5b1" />

        <Button
            android:layout_width="90dp"
            android:layout_height="90dp"
            android:id="@+id/A3"
            android:layout_marginTop="10dp"
            android:layout_marginLeft="10dp"
            android:layout_alignTop="@+id/A1"
            android:layout_toLeftOf="@+id/A1"
            android:layout_toStartOf="@+id/A1"
            android:background="#33e5b1" />

        <Button
            android:layout_width="90dp"
            android:layout_height="90dp"
            android:text=" "

            android:layout_marginTop="10dp"
            android:layout_marginLeft="10dp"
            android:id="@+id/B1"
            android:background="#33e5b1"
            android:layout_above="@+id/A1"
            android:layout_alignLeft="@+id/A1"
            android:layout_alignStart="@+id/A1" />

        <Button
            android:layout_width="90dp"
            android:layout_height="90dp"
            android:id="@+id/B2"
            android:layout_marginTop="10dp"
            android:layout_marginLeft="10dp"
            android:background="#33e5b1"
            android:layout_alignTop="@+id/B1"
            android:layout_alignLeft="@+id/A1"
            android:layout_alignStart="@+id/A1" />

        <Button
            style="?android:attr/buttonStyleSmall"
            android:layout_width="90dp"
            android:layout_height="90dp"
            android:id="@+id/B3"
            android:layout_marginTop="10dp"
            android:layout_marginLeft="10dp"
            android:background="#33e5b1"
            android:layout_above="@+id/A3"
            android:layout_alignLeft="@+id/A3"
            android:layout_alignStart="@+id/A3" />

        <Button
            style="?android:attr/buttonStyleSmall"
            android:layout_width="90dp"
            android:layout_height="90dp"
            android:id="@+id/C1"
            android:layout_marginTop="10dp"
            android:layout_marginLeft="10dp"
            android:background="#33e5b1"
            android:layout_above="@+id/B1"
            android:layout_alignLeft="@+id/B1"
            android:layout_alignStart="@+id/B1" />

        <Button
            style="?android:attr/buttonStyleSmall"
            android:layout_width="90dp"
            android:layout_height="90dp"
            android:id="@+id/C2"
            android:layout_marginTop="10dp"
            android:layout_marginLeft="10dp"
            android:background="#33e5b1"
            android:layout_alignTop="@+id/A1"
            android:layout_alignLeft="@+id/B1"
            android:layout_alignStart="@+id/B1" />

        <Button
            style="?android:attr/buttonStyleSmall"
            android:layout_width="90dp"
            android:layout_marginTop="10dp"
            android:layout_marginLeft="10dp"
            android:layout_height="90dp"
            android:id="@+id/C3"
            android:background="#33e5b1"
            android:layout_above="@+id/B2"
            android:layout_toRightOf="@+id/B1"
            android:layout_toEndOf="@+id/B1" />
    </GridLayout>
</RelativeLayout>
